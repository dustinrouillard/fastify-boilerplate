{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*.ts"]
}
